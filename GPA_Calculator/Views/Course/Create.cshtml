@model CourseViewmodel
@{
    ViewData["Title"] = "Add Course";
    Layout = "_StudentLayout";
}


<style>
    .form-signin {
        width: 100%;
        max-width: 500px;
        padding: 15px;
        margin: auto;
        margin-top: 100px;
        background-color: #fff;
    }
</style>

<form method="post" asp-controller="Course" asp-action="Add">
    <div class="form-group">
        <label asp-for=@Model.CourseCode>Course Code</label>
        <input asp-for=@Model.CourseCode class="form-control" />
        <span asp-validation-for=@Model.CourseCode class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=@Model.CourseUnit>Course Unit</label>
        <input asp-for=@Model.CourseUnit class="form-control" />
        <span asp-validation-for=@Model.CourseUnit class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=@Model.Score>Student Score</label>
        <input asp-for=@Model.Score class="form-control" />
        <span asp-validation-for=@Model.Score class="text-danger"></span>
    </div>
    <div class="d-flex align-self-end">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>